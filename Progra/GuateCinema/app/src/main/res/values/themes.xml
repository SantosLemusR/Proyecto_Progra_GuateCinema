<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema GuateCinema -->
    <style name="Theme.GuateCinema" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Fondo y texto -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        <!-- Estilo del botón -->
        <item name="buttonStyle">@style/Widget.Button.CustomButton</item>

        <!-- Barra de estado y navegación -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <!-- Estilo personalizado del botón -->
    <style name="Widget.Button.CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorButton</item>
        <item name="android:textColor">@color/colorButtonText</item>
    </style>
</resources>
